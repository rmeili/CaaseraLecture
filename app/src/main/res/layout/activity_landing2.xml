<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.russellmeili.caasera.Landing2">

    <Button
        android:text="@string/freeTrial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginEnd="35dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/landing2"
        android:id="@+id/imageView6"
        android:layout_marginBottom="167dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nullam quis nibh facilisis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:id="@+id/txtHeader"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Nullam quis nibh facilisis, tempus elit et, porttitor leo. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Nulla facilisi. Ut rutrum nisl sed lectus vilutpat."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBody"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/landing2pg"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/txtBody"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="68dp"
        android:layout_above="@+id/button2"
        android:layout_alignEnd="@+id/txtHeader" />

    <Button
        android:text="@string/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="btnLoginOnClick "
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtHeader" />

</RelativeLayout>
